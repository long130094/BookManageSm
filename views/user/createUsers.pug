extends ../Home.pug

block content
 .container
    h1.text-center Register a Member
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create" method="POST")
      .form-group
        label(for="name") Name
        input#name.form-control(type="text", name="name", value=values ? values.name: '')
      .form-group
        label(for="age") Age
        input#age.form-control(type="text", name="age", value=values? values.age: '')
        
      button.btn.btn-primary Register

