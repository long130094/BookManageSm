extends ../Home.pug

block content
 .container
    h1 Book store
        a(href="/books/create")
            button(class="btn btn-primary mr-3") Create New
    table.table
        tr
            th Name
            th Desciption
            th Action
        each book in books 
          tr
            td= book.title
            td= book.des
            td
                a.btn.btn-light(href="/books/" +book.id style="text-decoration: none")  Update 
                a.btn.btn-light.ml-2(href="/books/" +book.id +"/delete" style="text-decoration: none") Delete 


        